@include_once(
    dirname(__DIR__) .
    DIRECTORY_SEPARATOR . 'vendor' .
    DIRECTORY_SEPARATOR . 'autoload.php'
);

if (!class_exists('\\fpoirotte\\XRL\\Autoload')) {
    require_once(
        dirname(__DIR__) .
        DIRECTORY_SEPARATOR . 'src' .
        DIRECTORY_SEPARATOR . 'Autoload.php'
    );
    \fpoirotte\XRL\Autoload::register();
}

$cli = new \fpoirotte\XRL\CLI();
die($cli->run($_SERVER['argv']));
